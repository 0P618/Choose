<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/separation"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/black" />

            <ImageView
                android:id="@+id/iv_time_line"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:background="@color/yancy_yellow100" />


            <TextView
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/black" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:paddingBottom="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/tv_check_status_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawableTop="@drawable/ic_mail_black_24dp"
                android:scaleX="0.6"
                android:scaleY="0.6"
                android:text="待审核"
                android:textColor="@color/red" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_stu_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名：张庆宝"
                    android:textColor="@color/black"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/tv_stu_class"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="班级：15软件设计二班"
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/tv_study_where"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地点：互联网+学研基地"
                    android:textColor="@color/blue"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_where_remarks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="备注：实训楼103"
                    android:textColor="@color/burlywood"
                    android:textSize="12dp" />

                <Button
                    android:id="@+id/btn_show_prove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="查看证明"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/ll_check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="4dp">

                    <TextView
                        android:id="@+id/tv_check_success"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:drawableTop="@drawable/ic_check_circle_black_24dp"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:text="通过" />

                    <TextView
                        android:id="@+id/tv_check_fail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:drawableTop="@drawable/ic_cancel_black_24dp"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:text="失败" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_check_status_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:drawableTop="@drawable/ic_check_circle_black_24dp"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:text="审核通过"
                    android:visibility="gone" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>